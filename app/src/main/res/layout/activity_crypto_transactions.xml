    <androidx.cardview.widget.CardView
        android:layout_width="372dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        card_view:cardBackgroundColor="#0a3628"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="656dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/full_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Send BTC"
                android:textColor="#ffffff"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipientID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:fontFamily="serif"
                    android:text="Recipient"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/recipientid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#ffffff"
                android:hint="Name"
                android:padding="5dp"
                android:textColor="#000047"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/money_code_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:text="BTC"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/btcvalueid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:hint="0.00"
                android:padding="5dp"
                android:textColor="#000047"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:text="Value in USD"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/usdvalueid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:hint="0.00"
                android:padding="5dp"
                android:textColor="#000047"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:text="Description"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:hint="Reason for transaction"
                android:padding="5dp"
                android:textColor="#000047"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cryptoconvertbtn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:onClick="convertonclick"
                android:text="@string/_convertbtn"
                android:fontFamily="serif"
                android:textColor="#fff"
                android:background="#000000"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/sendbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#000000"
                android:fontFamily="serif"
                android:onClick="doSend"
                android:text="@string/_sendbtn"
                android:textColor="#fff"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>